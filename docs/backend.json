
{
  "entities": {
    "user": {
      "title": "User",
      "description": "Represents a user of the agency's internal system.",
      "type": "object",
      "properties": {
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "username": { "type": "string" },
        "role": { "type": "string", "enum": ["admin", "contabilidad", "ventas", "team_member", "julio", "alma", "fernando", "luis"] },
        "isActive": { "type": "boolean" },
        "accessSections": {
          "type": "object",
          "properties": {
            "nosotros": { "type": "boolean" },
            "introduccion": { "type": "boolean" },
            "pendientes": { "type": "boolean" },
            "finanzas": { "type": "boolean" },
            "ventas": { "type": "boolean" },
            "accesos": { "type": "boolean" },
            "calendario": { "type": "boolean" },
            "miProgreso": { "type": "boolean" }
          }
        },
        "permissions": {
          "type": "object",
          "properties": {
            "finanzas": {
              "type": "object",
              "properties": {
                "agregarPagos": { "type": "boolean" },
                "agregarGastos": { "type": "boolean" },
                "agregarCuentasPorCobrar": { "type": "boolean" }
              }
            },
            "ventas": {
              "type": "object",
              "properties": {
                "agregarProspectosDirecto": { "type": "boolean" },
                "cambiarStatusProspectos": { "type": "boolean" },
                "cambiarStatusSoloAsignados": { "type": "boolean" },
                "verTodosProspectos": { "type": "boolean" }
              }
            },
            "accesos": {
              "type": "object",
              "properties": {
                "ajustarAccesos": { "type": "boolean" },
                "agregarNuevosAccesos": { "type": "boolean" }
              }
            },
            "calendario": {
              "type": "object",
              "properties": {
                "cambiarFechas": { "type": "boolean" },
                "cambiarFechasSoloAsignados": { "type": "boolean" },
                "verCalendarioTodos": { "type": "boolean" },
                "modificarCalendarioTodos": { "type": "boolean" },
                "asignarEquipos": { "type": "boolean" }
              }
            },
            "pendientes": {
              "type": "object",
              "properties": {
                "moverPendientes": { "type": "boolean" },
                "reasignarResponsables": { "type": "boolean" }
              }
            }
          }
        },
        "progressConfig": {
          "type": "object",
          "properties": {
            "registroLlegadasTemprano": { "type": "boolean" },
            "diasCompletadosPendientes": { "type": "boolean" },
            "salidasGrabacion": { "type": "boolean" },
            "ventasCerradas": { "type": "boolean" },
            "statusVentas": { "type": "boolean" },
            "resumenVentasMes": { "type": "boolean" },
            "gananciasPerdidas": { "type": "boolean" },
            "desempenioOtrosUsuarios": { "type": "boolean" },
            "proximasGrabaciones": { "type": "boolean" },
            "llegadasTarde": { "type": "boolean" }
          }
        },
        "lastLogin": { "type": "string", "format": "date-time" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["email", "username", "role", "isActive"]
    },
    "user_role": {
      "title": "User Role",
      "description": "Template for user roles and permissions.",
      "type": "object",
      "properties": {
        "roleName": { "type": "string" },
        "description": { "type": "string" },
        "accessTemplate": { "$ref": "#/entities/user/properties/accessSections" },
        "permissionsTemplate": { "$ref": "#/entities/user/properties/permissions" },
        "progressTemplate": { "$ref": "#/entities/user/properties/progressConfig" }
      },
      "required": ["roleName"]
    },
    "equipment": {
      "title": "Equipment",
      "description": "Represents a piece of equipment for agency use.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "type": { "type": "string", "enum": ["audio", "video", "iluminacion", "soporte"] },
        "available": { "type": "boolean" },
        "assignedTo": { "type": "string", "description": "User ID" },
        "assignedDate": { "type": "string", "format": "date-time" },
        "assignedUntil": { "type": "string", "format": "date-time" },
        "condition": { "type": "string", "enum": ["excelente", "bueno", "regular", "necesita_mantenimiento"] },
        "notes": { "type": "string" }
      },
      "required": ["name", "type", "available", "condition"]
    },
    "attendance": {
      "title": "Attendance",
      "description": "Record of user attendance.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "date": { "type": "string", "format": "date" },
        "loginTime": { "type": "string", "format": "time" },
        "loginIp": { "type": "string", "format": "ipv4" },
        "status": { "type": "string", "enum": ["temprano", "puntual", "tarde"] },
        "location": { "type": "string" }
      },
      "required": ["userId", "date", "loginTime", "status"]
    }
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/user" },
      "description": "Stores individual user data and their specific permissions."
    },
    "/user_roles/{roleId}": {
      "schema": { "$ref": "#/entities/user_role" },
      "description": "Stores role templates for easy permission assignment."
    },
    "/equipment/{equipmentId}": {
      "schema": { "$ref": "#/entities/equipment" },
      "description": "Manages the inventory and assignment of company equipment."
    },
    "/attendance/{attendanceId}": {
      "schema": { "$ref": "#/entities/attendance" },
      "description": "Logs user attendance records."
    }
  },
  "auth": {
    "providers": ["email"]
  }
}
