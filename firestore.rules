
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Usuarios autenticados pueden leer casi todo
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && request.auth.token.role in ['admin', 'manager'];
    }
    
    // Credenciales solo para administradores
    match /credentials/{credentialId} {
      allow read, write: if request.auth != null 
        && request.auth.token.role == 'admin';
    }
    
    // Team members pueden editar sus tareas
    match /tasks/{taskId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null 
        && (request.auth.token.role in ['admin', 'manager'] 
            || resource.data.assignedTo == request.auth.token.name);
    }
    
    // Clientes solo editables por managers y admin
    match /clients/{clientId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && request.auth.token.role in ['admin', 'manager'];
    }
  }
}
